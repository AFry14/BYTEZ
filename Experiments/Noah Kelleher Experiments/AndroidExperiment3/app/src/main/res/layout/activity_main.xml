<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bottomLeft"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginTop="4dp"
        android:onClick="play"
        app:layout_constraintEnd_toEndOf="@+id/middleLeft"
        app:layout_constraintTop_toBottomOf="@+id/middleLeft" />

    <Button
        android:id="@+id/topLeft"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginEnd="4dp"
        android:onClick="play"
        app:layout_constraintEnd_toStartOf="@+id/topMiddle"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <Button
        android:id="@+id/bottomMiddle"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginTop="4dp"
        android:onClick="play"
        app:layout_constraintEnd_toEndOf="@+id/middleMiddle"
        app:layout_constraintStart_toStartOf="@+id/middleMiddle"
        app:layout_constraintTop_toBottomOf="@+id/middleMiddle" />

    <Button
        android:id="@+id/bottomRight"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginTop="4dp"
        android:onClick="play"
        app:layout_constraintStart_toStartOf="@+id/middleRight"
        app:layout_constraintTop_toBottomOf="@+id/middleRight" />

    <Button
        android:id="@+id/topRight"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginStart="4dp"
        android:onClick="play"
        app:layout_constraintStart_toEndOf="@+id/topMiddle"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <Button
        android:id="@+id/middleMiddle"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginTop="4dp"
        android:onClick="play"
        app:layout_constraintEnd_toEndOf="@+id/topMiddle"
        app:layout_constraintStart_toStartOf="@+id/topMiddle"
        app:layout_constraintTop_toBottomOf="@+id/topMiddle" />

    <Button
        android:id="@+id/middleLeft"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginTop="4dp"
        android:onClick="play"
        app:layout_constraintEnd_toEndOf="@+id/topLeft"
        app:layout_constraintTop_toBottomOf="@+id/topLeft" />

    <Button
        android:id="@+id/middleRight"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:layout_marginTop="4dp"
        android:onClick="play"
        app:layout_constraintStart_toStartOf="@+id/topRight"
        app:layout_constraintTop_toBottomOf="@+id/topRight" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/titleGame"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/topMiddle"
        android:layout_width="110dp"
        android:layout_height="137dp"
        android:onClick="play"
        app:layout_constraintEnd_toEndOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="@+id/titleText"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/turnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xTurn"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomMiddle" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="restart"
        android:text="@string/restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>